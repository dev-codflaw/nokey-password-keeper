{
  "name": "NoKey - A Stupid Password Keeper",
  "short_name": "NoKey - A Stupid Password Keeper",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "NoKey - A Stupid Password Keeper is a Chrome/Edge extension to display records from a JSON file.",
  "icons": {
    "16": "icons/padlock16x16.png",
    "32": "icons/padlock32x32.png",
    "48": "icons/padlock48x48.png",
    "128": "icons/padlock128x128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": ["sidePanel"]
}
